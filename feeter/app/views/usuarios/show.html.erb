<p id="notice"><%= notice %></p>

<p>
  <strong>Nome:</strong>
  <%= @usuario.nome %>
</p>
<p>
  <h2>Tweets Timeline</h2>
  <% @usuario.timeline.includes(:usuario).each do |tweet| %>
  <div style='width:500px'>
    <div style='width:100%'>
      <%= link_to tweet.usuario.nome, tweet.usuario %> feetou..
    </div>
    <div style='width:100%; padding-left:15px '>
      <%= tweet.texto %>
    </div>
    <div style='width:100%; text-align:right'>
      at <%= l tweet.created_at, :format => :short %>
    </div>
  </div>
  <% end %>
</p>
<%= link_to 'Edit', edit_usuario_path(@usuario) %> |
<%= link_to 'Back', usuarios_path %>
